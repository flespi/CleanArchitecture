                ],
                "PostLogoutRedirectUris": [
                    "http://localhost:4200/authentication/logout-callback",
                    "https://localhost:4201/authentication/logout-callback"
                ],
                "AllowedCorsOrigins": [
                    "http://localhost:4200",
                    "https://localhost:4201"
                ],
                "AllowedScopes": [
                    "openid",
                    "profile",
                    "CleanArchitecture_API"
                ]
            }
        ]
    }
